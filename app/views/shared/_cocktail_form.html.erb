<%= simple_form_for @cocktail do |f| %>
  <%= f.input :name, input_html: { class: 'input' }%>
  <label class="btn submit">
    Add a photo
    <span style="display:none;">
      <%= f.input :photo, as: :file %>
    </span>
  </label> <br>
  <%= f.button :submit, input_html: { class: 'submit' } %>
<% end %>
